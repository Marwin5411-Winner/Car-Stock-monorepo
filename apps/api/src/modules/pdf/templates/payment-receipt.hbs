<!-- ใบเสร็จรับเงิน (Payment Receipt) -->
<div class="page" style="padding: 10mm 15mm;">
  {{> header}}
  
  <style>
    /* Compact overrides */
    body { font-size: 13px; line-height: 1.3; }
    .page { padding-top: 5mm !important; }
    .header { margin-bottom: 10px !important; }
    .document-title { margin: 15px 0 10px !important; font-size: 18px !important; }
    .content p { margin: 3px 0; }
    td { padding: 4px 8px !important; font-size: 13px !important; }
    .signatures { margin-top: 30px !important; }
    .signature-line { margin: 20px auto 5px !important; }
  </style>

  <h1 class="document-title">ใบเสร็จรับเงิน</h1>
  
  <div class="text-right" style="margin-bottom: 10px;">
    <div>เลขที่: {{receiptNumber}}</div>
    <div>วันที่: {{formatThaiDate date}}</div>
  </div>
  
  <div class="content" style="line-height: 1.4;">
    <p>ได้รับเงินจาก: <strong>{{customer.name}}</strong></p>
    
    <p>ที่อยู่: 
      {{safe customer.address "-"}} 
      {{#if customer.street}}ถนน {{customer.street}}{{/if}}
      ตำบล/แขวง {{safe customer.subdistrict "-"}}
      อำเภอ/เขต {{safe customer.district "-"}}
      จังหวัด {{safe customer.province "-"}}
      รหัสไปรษณีย์ {{safe customer.postalCode "-"}}
    </p>
    
    <p>โทรศัพท์: {{formatPhone customer.phone}}</p>
    
    <div style="margin: 15px 0; padding: 10px; border: 1px solid #ccc; background: #f9f9f9;">
      <h4 style="margin-bottom: 5px; font-size: 14px;">รายละเอียดรถยนต์ (ถ้ามี)</h4>
      <table style="border: none; margin: 0;">
        <tr style="background: transparent;">
          <td style="border: none; width: 120px; padding: 2px 5px !important;"><strong>ยี่ห้อ:</strong></td>
          <td style="border: none; padding: 2px 5px !important;">{{safe car.brand "-"}}</td>
        </tr>
        {{#if car.model}}
        <tr style="background: transparent;">
          <td style="border: none; padding: 2px 5px !important;"><strong>รุ่น:</strong></td>
          <td style="border: none; padding: 2px 5px !important;">{{car.model}}</td>
        </tr>
        {{/if}}
        <tr style="background: transparent;">
          <td style="border: none; padding: 2px 5px !important;"><strong>สี:</strong></td>
          <td style="border: none; padding: 2px 5px !important;">{{safe car.color "-"}}</td>
        </tr>
        {{#if car.engineNo}}
        <tr style="background: transparent;">
          <td style="border: none; padding: 2px 5px !important;"><strong>เลขเครื่องยนต์:</strong></td>
          <td style="border: none; padding: 2px 5px !important;">{{car.engineNo}}</td>
        </tr>
        {{/if}}
        {{#if car.chassisNo}}
        <tr style="background: transparent;">
          <td style="border: none; padding: 2px 5px !important;"><strong>เลขตัวถัง:</strong></td>
          <td style="border: none; padding: 2px 5px !important;">{{car.chassisNo}}</td>
        </tr>
        {{/if}}
      </table>
    </div>
    
    <div style="margin: 15px 0; padding: 10px; border: 2px solid #000; background: #fff;">
      <table style="border: none; width: 100%; margin: 0;">
        <tr style="background: transparent;">
          <td style="border: none; font-size: 15px !important; padding: 2px 5px !important;"><strong>จำนวนเงิน:</strong></td>
          <td style="border: none; font-size: 16px !important; text-align: right; padding: 2px 5px !important;"><strong>{{formatCurrency amount}}</strong></td>
        </tr>
        <tr style="background: transparent;">
          <td style="border: none; padding: 2px 5px !important;"><strong>ตัวอักษร:</strong></td>
          <td style="border: none; text-align: right; padding: 2px 5px !important;">({{numberToThaiText amount}})</td>
        </tr>
        <tr style="background: transparent;">
          <td style="border: none; padding: 2px 5px !important;"><strong>วิธีการชำระ:</strong></td>
          <td style="border: none; text-align: right; padding: 2px 5px !important;">{{paymentMethod}}</td>
        </tr>
      </table>
    </div>
    
    {{#if note}}
    <div class="notes" style="margin-top: 15px; padding: 8px;">
      <strong>หมายเหตุ:</strong> {{note}}
    </div>
    {{/if}}
  </div>
  
  <div class="signatures" style="margin-top: 30px;">
    <div class="signature-box">
      <div class="signature-line" style="margin-top: 20px;"></div>
      <div class="signature-label">ผู้มอบเงิน</div>
      <div style="margin-top: 5px; font-size: 12px;">({{customer.name}})</div>
    </div>
    <div class="signature-box">
      <div class="signature-line" style="margin-top: 20px;"></div>
      <div class="signature-label">ผู้รับเงิน</div>
      <div style="margin-top: 5px; font-size: 12px;">(บริษัท วีบียอนด์ อินโนเวชั่น จำกัด)</div>
    </div>
  </div>
</div>
