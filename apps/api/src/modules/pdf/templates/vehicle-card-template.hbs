    .page {
      font-family: 'Sarabun', 'Kanit', sans-serif;
      font-size: 9px;
      padding: 0;
      color: #000;
      position: relative;
    }
    .page * {
      color: #000 !important;
      background: transparent !important;
      box-sizing: border-box;
    }
    /* Hide all borders and headers for pre-printed form */
    .page table, .page th, .page td {
      border: none !important;
      padding: 2px;
      vertical-align: middle;
      line-height: 1.2;
    }
    .page .title {
      display: none;
    }
    .page .checkbox {
      display: inline-block;
      width: 8px;
      height: 8px;
      border: 1px solid #000;
      margin-right: 2px;
      vertical-align: middle;
      visibility: hidden; /* Hide checkbox box, maybe keep it if user wants to see where it is */
    }
    /* Specific positioning might be needed, but since we're using the same structure, 
       we'll just make text transparent where it should be hidden and keep it where it should be shown.
       Actually, the user said "no tables and headers", which means they just want the values.
    */
    th {
      visibility: hidden;
    }
    .page .mt-neg {
      margin-top: -1px;
    }
    
    /* Ensure height matches original for correct alignment */
    td {
      height: 14px;
    }

    @media print {
      .page {
        padding: 5px !important;
        margin: 0 !important;
        page-break-after: always !important;
        page-break-inside: avoid !important;
      }
    }
  </style>

